{
    "build": {
      "context": "..",
      "dockerfile": "../Dockerfile"
    },
    "hostRequirements": {
      "cpus": 2
    },
    "waitFor": "onCreateCommand",
    // "updateContentCommand": "",
    // "postCreateCommand": "",
    "postStartCommand": {
      "nodemon": "nodemon --ignore '_build/**' -e 'md,ipynb' --exec 'myst build --html'",
      "http-server": "http-server _build/html -c-1"
    },
    "customizations": {
      "codespaces": {
        "openFiles": ["CONTRIBUTING.md"]
      },
      "vscode": {
        "extensions": [
          "ms-toolsai.jupyter",
          "ms-python.python",
          "hediet.vscode-drawio",
          "robole.markdown-shortcuts",
          "davidanson.vscode-markdownlint",
          "zgithub.vscode-github-actions",
          "github.remotehub"
        ]
      }
	},
	"portsAttributes": {
		"3000": {
			"label": "Website"
		}
	}
}
  