{
    "build": {
      "context": "..",
      "dockerfile": "../Dockerfile"
    },
    "hostRequirements": {
      "cpus": 2
    },
    "containerEnv":{
      "HOST": "${CODESPACE_NAME}-10000.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}"
    },
    // "remoteEnv":{
    //   "HOST": "${CODESPACE_NAME}-10000.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}"
    // },
    "waitFor": "onCreateCommand",
    // "updateContentCommand": "",
    // "postCreateCommand": "",
    "postStartCommand": {
      "papers": "myst start --keep-host --port 10000 --server-port 10100",
      "http": "envsubst < .devcontainer/nginx.conf > .devcontainer/nginx.tmp.conf && nginx -c $CODESPACE_VSCODE_FOLDER/.devcontainer/nginx.tmp.conf"
    },
    "customizations": {
      "codespaces": {
        "openFiles": ["CONTRIBUTING.md"]
      },
      "vscode": {
        "extensions": [
          "ms-toolsai.jupyter",
          "ms-python.python",
          "hediet.vscode-drawio",
          "robole.markdown-shortcuts",
          "davidanson.vscode-markdownlint",
          "zgithub.vscode-github-actions",
          "github.remotehub",
          "streetsidesoftware.code-spell-checker-ukrainian",
          "executablebookproject.myst-highlight", 
          "chrisjsewell.myst-lsp",
          "chrisjsewell.myst-tml-syntax"
        ]
      }
	},
	"portsAttributes": {
		"8080": {
			"label": "Website",
      "onAutoForward": "openPreview"
		}
	}
}
  